{
  "name": "xander-draw-mcp",
  "version": "1.0.0",
  "private": true,
  "description": "Self-hosted Excalidraw with MCP ingest server for orchestration-driven diagram rendering",
  "author": "Xander007x",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite --port 3000",
    "dev:server": "tsx watch server/index.ts",
    "build": "vite build",
    "build:server": "tsc -p server/tsconfig.json",
    "start": "concurrently \"npm run serve\" \"npm run start:server\"",
    "serve": "vite preview --port 3000",
    "start:server": "node dist-server/index.js",
    "setup": "npm install && echo 'Setup complete! Run: npm run dev'"
  },
  "dependencies": {
    "@excalidraw/excalidraw": "^0.18.0",
    "@excalidraw/mermaid-to-excalidraw": "^0.3.0",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "uuid": "^10.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vite": "^5.4.0"
  }
}
